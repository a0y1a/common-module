@model AlertEntity
@if (Model.Type == AlertType.Success)
{
    <div class="alert alert-success alert-dismissable" data-delay="5">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>提示</strong> @Html.Raw(Model.Message)
    </div>
}
else
{
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>警告</strong> @Html.Raw(Model.Message)
    </div>
}