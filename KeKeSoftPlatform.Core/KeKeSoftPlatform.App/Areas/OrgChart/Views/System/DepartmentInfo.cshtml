@model DepartmentInfoData

    <div class="box box-primary">
        <div class="box-header">
            
            <h3 class="box-title">部门信息</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" id="btnEditDepartment">
                    <i class="fa fa-pencil"></i> 
                </button>
            </div>
        </div>
        <div class="box-body">
            <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                    <b>名称</b> <a class="pull-right">@Model.Department.Name</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">直属部门人员信息</h3>
            <div class="box-tools pull-right">
                <a href="#" target="_blank" class="btn btn-box-tool authorized-xianlu" title="线路授权">
                    <i class="fa fa-database"></i>
                </a>
                <button type="button" class="btn btn-box-tool" id="btnViewEmployee" data-target="#tbDepartmentDirectEmployee">
                    <i class="fa fa-user"></i>
                </button>
            </div>
        </div>

        <div class="box-body">
            <table class="table table-hover" id="tbDepartmentDirectEmployee">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>姓名</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DirectEmployee)
                    {
                        <tr data-id="@item.Id">
                            <td>@item.Number</td>
                            <td>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="box box-info collapsed-box">
        <div class="box-header with-border">
            <h3 class="box-title">旗下部门人员信息</h3>
            <div class="box-tools pull-right">
                <a target="_blank" href="#" class="btn btn-box-tool authorized-xianlu" title="线路授权">
                    <i class="fa fa-database"></i>
                </a>
                <button type="button" class="btn btn-box-tool" id="btnViewEmployee_1" data-target="#tbDepartmentAllEmployee">
                    <i class="fa fa-user"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-hover" id="tbDepartmentAllEmployee">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>姓名</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AllEmployee)
                    {
                        <tr data-id="@item.Id">
                            <td>@item.Number</td>
                            <td>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
